# Database Configuration for Problem 5 - TypeORM with PostgreSQL
# Copy this file to .env and update the values for your environment

# Database Connection
DB_HOST=postgres
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=99tech_challenge

# Application Configuration
NODE_ENV=development
PORT=3000

# Development Settings (set to false in production)
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Production Database Settings (uncomment for production)
# DB_SSL=true
# DB_CONNECTION_LIMIT=20
# DB_ACQUIRE_TIMEOUT=30000

# Database Migration Settings
TYPEORM_MIGRATIONS_RUN=false
TYPEORM_MIGRATIONS_TABLE_NAME=migrations

# Security (update these in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=debug
