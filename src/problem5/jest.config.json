{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "testMatch": [
    "**/__tests__/**/*.ts",
    "**/?(*.)+(spec|test).ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/*.test.ts",
    "!**/*.spec.ts",
    "!**/server.ts",
    "!**/dist/**",
    "!**/node_modules/**",
    "!**/migrations/**",
    "!**/setup-dev.*"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "setupFiles": ["<rootDir>/tests/setup.ts"],
  "testTimeout": 30000
}